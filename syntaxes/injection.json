{
  "name": "source.tsx.twin",
  "scopeName": "source.tsx.twin",
  "injectionSelector": "L:source -comment",
  "patterns": [
    {
      "begin": "(tw)(?:(?:(?:\\.[\\w$]+)*|\\(([^\\)]*)\\)))*(`)",
      "end": "`",
      "beginCaptures": {
        "1": { "name": "entity.name.function.tagged-template" },
        "2": {
          "patterns": [
            { "include": "source.ts#expression" },
            { "include": "source.ts#string" },
            { "include": "source.ts#comment" }
          ]
        }
      },
      "patterns": [
        {
          "end": "`",
          "patterns": [{ "include": "source.twin" }]
        }
      ]
    },
    {
      "name": "meta.jsxProp.twin",
      "begin": "\\s*(tw)(=){",
      "beginCaptures": {
        "1": { "name": "entity.other.attribute-name" },
        "2": { "name": "keyword.operator.assignment" }
      },
      "end": "}",
      "patterns": [
        {
          "end": "}",
          "patterns": [{ "include": "source.twin" }]
        }
      ]
    },
    {
      "begin": "\\s*(tw)(=)(')",
      "beginCaptures": {
        "1": { "name": "entity.other.attribute-name" },
        "2": { "name": "keyword.operator.assignment" },
        "3": { "name": "string.quoted.single" }
      },
      "end": "(')",
      "endCaptures": {
        "1": {
          "name": "string.quoted.single"
        }
      },
      "patterns": [
        {
          "end": "'",
          "patterns": [{ "include": "source.twin" }]
        }
      ]
    },
    {
      "name": "meta.jsxProp.twin",
      "begin": "\\s*?(tw)(=)(\")",
      "beginCaptures": {
        "1": { "name": "entity.other.attribute-name" },
        "2": { "name": "keyword.operator.assignment" },
        "3": { "name": "string.quoted.double" }
      },
      "end": "(\")",
      "endCaptures": {
        "1": { "name": "string.quoted.double" }
      },
      "patterns": [
        {
          "end": "\"",
          "patterns": [{ "include": "source.twin" }]
        }
      ]
    }
  ]
}

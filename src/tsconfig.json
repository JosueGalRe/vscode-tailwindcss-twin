{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ESNext"],
    "types": ["node", "vscode", "webpack-env", "tailwind-types"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "..",
    "paths": {
      "~/*": ["./*"],
      "@": ["./common/index.ts"],
      "@/*": ["./common/*"]
    }
  },
  "include": ["**/*.ts", "**/*.json", "../package.json", "../package.nls*.json"],
  "exclude": ["**/__tests__/**", "**/*.test.ts"]
}
